{
  "name": "janitor",
  "version": "0.5.0",
  "description": "",
  "main": "dist/index.js",
  "author": "Caian Ertl <hi@caian.org>",
  "license": "CC0-1.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vrelease/janitor.git"
  },
  "bugs": {
    "url": "https://github.com/vrelease/janitor/issues"
  },
  "homepage": "https://github.com/vrelease/janitor#readme",
  "scripts": {
    "all": "npm run build:js && npm run fix:style && npm run check:all && npm run clean",
    "start": "node dist/index.js",
    "start:ts": "ts-node src/index.ts",
    "start:watch": "nodemon",
    "build:js": "tsc --skipLibCheck",
    "build:js:clean": "rm -rf dist && npm run build:js",
    "bump:dev": "ncu --upgrade --dep dev",
    "bump:prod": "ncu --upgrade --dep prod --target minor",
    "bump:all": "npm run bump:dev && npm run bump:prod",
    "check:build": "tsc --skipLibCheck --noEmit",
    "check:lint": "eslint --format=codeframe '**/*.ts'",
    "check:style": "standardx",
    "check:duplicated": "jscpd",
    "check:all": "npm run check:build && npm run check:lint && npm run check:style && npm run check:duplicated",
    "fix:style": "prettier --no-semi --print-width 100 --single-quote --trailing-comma none --write '**/*.ts' && standardx --fix '**/*.ts'",
    "clean": "rm -rf coverage dist report",
    "commit": "cz",
    "prepare": "[ \"$NODE_ENV\" == \"production\" ] && exit 0; husky install"
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "eslintIgnore": [
    "dist",
    "report"
  ],
  "lint-staged": {
    "**/*.ts": [
      "npm run fix:style"
    ]
  },
  "jscpd": {
    "threshold": 5,
    "reporters": [
      "html",
      "console"
    ],
    "absolute": true,
    "gitignore": true,
    "ignore": [
      "**/.github/**",
      "**/dist/**",
      "**/report/**"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run build:js && npm start",
    "ext": "ts"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/lodash": "^4.14.172",
    "@types/node": "^16.6.2",
    "@types/semver": "^7.3.8",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^7.0.1",
    "jscpd": "^3.3.26",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.12",
    "npm-check-updates": "^11.8.3",
    "prettier": "^2.3.2",
    "standardx": "^7.0.0",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5",
    "vrelease-bin": "^0.3.1"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "lodash": "^4.17.21",
    "octokit": "^1.4.0",
    "semver": "^7.3.5"
  }
}
